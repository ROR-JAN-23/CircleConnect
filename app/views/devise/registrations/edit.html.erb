
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="container bootstrap snippets bootdey">
    <h1 class="text-primary">Edit Profile</h1>
      <hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="avatar img-circle img-thumbnail" alt="avatar">
           <%# <%= image_tag current_user.avatar, class: "avatar img-circle img-thumbnail", height: "22" ,alt: "avatar"%>
          <h6>Upload a different photo...</h6>
           <%= f.file_field :avatar,class: "form-control" %>
        </div>
      </div>
      
      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        
        <h3>Personal info</h3>
    
          <div class="form-group">
            <div class="field">
              <%= f.label :email , class: "col-lg-3 control-label"%><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="field">
              <%= f.label :user_name , class: "col-lg-3 control-label"%><br />
              <%= f.text_field :user_name, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="field">
              <%= f.label :first_name , class: "col-lg-3 control-label"%><br />
              <%= f.text_field :first_name, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <div class="field">
              <%= f.label :last_name , class: "col-lg-3 control-label"%><br />
              <%= f.text_field :last_name, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>
          </div>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
          <div class="field">
          <%= f.label :password , class: "col-lg-3 control-label"%> <br />
          <%= f.password_field :password, autocomplete: "new-password" , class: "form-control" %>
          <% if @minimum_password_length %>
            <br />
          <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
          </div>

          <div class="field">
             <%= f.label :password_confirmation , class: "col-lg-3 control-label"%><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password",  class: "form-control" %>
         </div>   
            <div class="field">
            <%= f.label :current_password ,class: "col-lg-3 control-label"%> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password",  class: "form-control" %>
             </div>

          <div class="actions"><br>
            <%= f.submit "Update",  class:"btn btn-primary"%>
          </div>
          <div class="actions"><br>
          </div>
      </div>
  </div>
</div>
<hr>
<% end %>
<div><%= button_to "Delete My Account", destroy_user_path(current_user), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete,class:"btn btn-danger"%></div>
<%= link_to "Back", :back %>
